{
    "$schema": "http://json-schema.org/draft/2020-12/schema",
    "title": "control",
    "type": "object",
    "properties": {
        "players": {
            "type": "array",
            "items": {
                "type": "string"
            },
            "uniqueItems": true,
            "minItems": 1
        },
        "command": {
            "type": "string",
            "enum": ["play-pause", "stop", "next", "previous", "position", "volume", "shuffle", "loop"]
        }
    },
    "if": {
        "properties": {
            "command": { "const": "position" }
        }
    },
    "then": {
        "properties": {
            "position": {
                "type": "integer",
                "minimum": 0
            }
        },
        "required": ["players", "command", "position"]
    },
    "else": {
        "if": {
            "properties": {
                "command": { "const": "volume" }
            }
        },
        "then": {
            "properties": {
                "volume": {
                    "type": "number",
                    "minimum": 0,
                    "maximum": 1
                }
            },
            "required": ["players", "command", "volume"]
        },
        "else": {
            "required": ["players", "command"]
        }
    },
    "unevaluatedProperties": false
}