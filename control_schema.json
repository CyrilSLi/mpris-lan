{
    "$schema": "http://json-schema.org/draft/2020-12/schema",
    "title": "control",
    "type": "object",
    "properties": {
        "players": {
            "type": "array",
            "items": {
                "type": "string"
            },
            "uniqueItems": true,
            "minItems": 1
        },
        "command": {
            "type": "string",
            "enum": ["play", "pause", "play-pause", "stop", "next", "previous", "position", "volume", "shuffle", "loop"]
        }
    },
    "required": ["players", "command"],
    "allOf": [{
        "if": {
            "properties": {
                "command": { "const": "position" }
            }
        },
        "then": {
            "properties": {
                "value": {
                    "anyOf": [
                        {
                            "type": "integer",
                            "minimum": 0
                        },
                        {
                            "type": "string",
                            "pattern": "([0-9].)?[0-9][\\+-]?"
                        }
                    ]
                }
            }
        }
    }, {
        "if": {
            "properties": {
                "command": { "const": "volume" }
            }
        },
        "then": {
            "properties": {
                "value": {
                    "type": "number",
                    "minimum": 0,
                    "maximum": 1
                }
            }
        }
    }, {
        "if": {
            "properties": {
                "command": { "const": "shuffle" }
            }
        },
        "then": {
            "properties": {
                "value": {
                    "type": "string",
                    "enum": ["on", "off", "toggle"]
                }
            }
        }
    }, {
        "if": {
            "properties": {
                "command": { "const": "loop" }
            }
        },
        "then": {
            "properties": {
                "value": {
                    "type": "string",
                    "enum": ["none", "track", "playlist"]
                }
            }
        }
    }, {
        "if": {
            "properties": {
                "command": { "enum": ["position", "volume", "shuffle", "loop"] }
            }
        },
        "then": {
            "required": ["value"]
        }
    }],
    "unevaluatedProperties": false
}